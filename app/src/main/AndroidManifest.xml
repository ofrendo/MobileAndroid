<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dhbw.geo" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Rule"
            android:label="@string/title_activity_rule" >
        </activity>
        <activity
            android:name=".RuleGeneral"
            android:label="@string/title_activity_rule_general" >
        </activity>
        <activity
            android:name=".RuleCondition"
            android:label="@string/title_activity_rule_condition" >
        </activity>
        <activity
            android:name=".RuleAction"
            android:label="@string/title_activity_rule_action" >
        </activity>
    </application>

</manifest>
